<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.chatapplication.logInFragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_mainFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.chatapplication.logInFragments.LogInFragment"
        android:label="LogInFragment" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.chatapplication.logInFragments.SignupFragment"
        android:label="SignupFragment" />
</navigation>